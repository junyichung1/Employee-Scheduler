<%- include('../partials/header') %>

<h3>Please fill out or update below information:</h3>
<form action="/users/<%= user._id %>?_method=PUT" method="POST">
  <label for="name"
    >Name:
    <input class="select" type="text" name="name" value="<%= user.name %>" />
  </label>
  <br />
  <label for="department"
    >Department:
    <input class="select" type="text" name="department" value="<%= user.department %>" />
  </label>
  <br />
  <label for="email"
    >Email Address:
    <input class="select" type="text" name="email" value="<%= user.email %>" />
  </label>
  <br />
  <br />
  <input class="select" type="submit" value="Update" />
</form>
<%- include('../partials/footer') %>
