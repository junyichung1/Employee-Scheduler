<%- include('../partials/header') %>

<h3>Employees</h3>
<table>
    <tr>
        <th>Name</th>
        <th>Position</th>
        <th>Wage</th>
    </tr>
    <tr>
        
            <td><%= addedEmployee.name %></td>
            <td><%= addedEmployee.position %></td>
            <td><%= addedEmployee.wage %></td>
       
    </tr>

</table>
<form action="/employees" method=POST>
<label for="name">Name
    <input name="name" type="text">
  </label>
  <label for="position">Position
    <input name="position" type="text">
  </label>
  <label for="wage">Wage per Hour
    <input name="wage" type="number" placeholder="0.00" pattern="^\d*(\.\d{0,2})?$">
  </label>
  <input type="submit" value="Submit">
</form>


<a href="/schedules"><button>Back</button></a>

<%- include('../partials/footer') %>